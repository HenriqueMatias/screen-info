{
  "manifest_version": 2,

  "name": "Screen-info",
  "description": "This extension allow users to add, share and update information about some page.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html",
   "default_title": "Click here!"
 },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://maxcdn.bootstrapcdn.com/"
  ]
}
